        <Button
            android:id="@+id/toolbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Me"
            android:layout_gravity="end|center_vertical"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_marginEnd="16dp" />



@Override
public void extendComponents(Bundle savedInstanceState) {
    super.extendComponents(savedInstanceState);
    // Other initializations

    // Find the button inside the toolbar
    Button toolbarButton = findViewById(R.id.toolbar_button);

    // Set an OnClickListener for the button
    toolbarButton.setOnClickListener(new View.OnClickListener() {
        @Override
        public void onClick(View v) {
            // Redirect to another activity or perform any action
            Intent intent = new Intent(SetUpActivity.this, TargetActivity.class);
            startActivity(intent);
        }
    });

    // Other existing code...
}
